<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <com.dibi.livepulllocal.view.NoPreloadViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.dibi.livepulllocal.view.NoPreloadViewPager>

    <TextView
        android:id="@+id/tv_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:text="设置"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingRight="25dp"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_setup"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/setup"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />



    <TextView
        android:id="@+id/tv_add_video_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:text="查看地址"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_add_video_url"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:text="1/6"
        android:textColor="#ff0000"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_add_video_url"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:text=""
        android:textColor="#ff0000"
        android:gravity="center"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_num1"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:text=""
        android:textColor="#ffffff"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_num2"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="30dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:text=""
        android:textColor="#ffffff"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_num3"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="30dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:text=""
        android:textColor="#ffffff"
        android:visibility="invisible"
        />



</RelativeLayout>
