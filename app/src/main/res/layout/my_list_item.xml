<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


      <TextView
          android:id="@+id/tv_list_item_zu_name"
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:text="组名"
          android:textColor="#333333"
          android:gravity="center"
          />
    <TextView
        android:id="@+id/tv_list_item_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="www.hehe.com"
        android:textColor="#333333"
        />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_list_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#01cfff"
            android:visibility="visible"

            />
        <TextView
            android:id="@+id/tv_list_item_detele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:gravity="center"
            android:textColor="#01cfff"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_list_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:gravity="center"
            android:textColor="#01cfff"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>

    </LinearLayout>

</FrameLayout>
